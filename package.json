{
    "name": "blade-linter",
    "displayName": "Blade Linter",
    "description": "blade simple linter",
    "version": "0.0.1",
    "publisher": "ctf0",
    "repository": "https://github.com/ctf0/vscode-blade-linter",
    "engines": {
        "vscode": "^1.41.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:bl.lint"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "bl.lint",
                "title": "BL: Format"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "bl.lint",
                    "when": "editorLangId == blade"
                }
            ]
        }
    },
    "scripts": {
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.41.0",
        "eslint": "^6.6.0",
        "glob": "^7.1.5",
        "mocha": "^6.2.2",
        "typescript": "^3.6.4",
        "vscode-test": "^1.2.2"
    },
    "dependencies": {}
}
